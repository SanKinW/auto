<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" android:title="系统设置">
    <PreferenceCategory android:key="config" android:title="@string/cakeshopcard_action_settings">
        <ListPreference
            android:key="setting_list"
            android:title="@string/cakeshopcard_type_settings"
            android:defaultValue="2"
            android:entries="@array/cakeshopcard_settings_list"
            android:entryValues="@array/cakeshopcard_settings_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:dependency="auto_switch"/>
        <EditTextPreference android:key="money_settings"
            android:title="金额设置"
            android:summary="请输入金额数"
            android:dialogTitle="请输入金额数"
            android:numeric="integer"
            android:dependency="auto_switch">
        </EditTextPreference>
    </PreferenceCategory>
</PreferenceScreen>